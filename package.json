{
	"name": "openspot-tui",
	"version": "1.0.2",
	"description": "A terminal user interface for Spotify",
	"type": "module",
	"bin": {
		"openspot-tui": "./bin/openspot-tui.js"
	},
	"main": "./src/index.ts",
	"files": [
		"bin",
		"src",
		"mpris-native/index.js",
		"mpris-native/index.d.ts",
		"mpris-native/mpris-native.linux-x64-gnu.node"
	],
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"auth": "bun run src/scripts/auth-test.ts",
		"mpris": "bun run src/scripts/mpris-test.ts",
		"native": "bun run src/scripts/native-test.ts",
		"logout": "rm -rf ~/.config/spotify-tui/credentials.json && echo 'Logged out successfully'",
		"typecheck": "tsc --noEmit",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write src/",
		"build:native": "cd mpris-native && cargo build --release && npx napi build --platform --release",
		"build:native:debug": "cd mpris-native && cargo build && npx napi build --platform",
		"build": "bun run build:native && bun run typecheck",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"spotify",
		"tui",
		"terminal",
		"music",
		"player",
		"cli",
		"bun"
	],
	"author": "iiviie",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/iiviie/openspot-tui.git"
	},
	"homepage": "https://github.com/iiviie/openspot-tui#readme",
	"bugs": {
		"url": "https://github.com/iiviie/openspot-tui/issues"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"os": [
		"linux"
	],
	"cpu": [
		"x64"
	],
	"dependencies": {
		"@opentui/core": "^0.1.69",
		"dbus-next": "^0.10.2",
		"open": "^11.0.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^20.0.0",
		"bun-types": "latest",
		"typescript": "^5.0.0"
	}
}
