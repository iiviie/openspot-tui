{
  "name": "spotify-tui",
  "version": "1.0.0",
  "description": "A terminal user interface for Spotify",
  "type": "module",
  "bin": {
    "spotify-tui": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "auth": "bun run src/scripts/auth-test.ts",
    "mpris": "bun run src/scripts/mpris-test.ts",
    "logout": "rm -rf ~/.config/spotify-tui/credentials.json && echo 'Logged out successfully'",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "postinstall": "bun run src/scripts/postinstall.ts"
  },
  "keywords": [
    "spotify",
    "tui",
    "terminal",
    "music",
    "player",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "dependencies": {
    "@opentui/core": "^0.1.69",
    "dbus-next": "^0.10.2",
    "open": "^11.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}
